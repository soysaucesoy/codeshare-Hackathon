generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Facility {
  id          Int      @id @default(autoincrement())
  name        String
  address     String?
  phone       String?
  email       String?
  serviceType String?
  capacity    Int      @default(0)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("facilities")
}